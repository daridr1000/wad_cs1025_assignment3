<div class="template">
  <div class="buttons">
    <%for i in (0...$template[1].length)%>
      <%if $template[1][i]=="_"%>
        <button id="btn1" class="btn">
        </button>
      <%else%>
        <button id="btn2" class="btn">
          <%=$template[1][i]%> </button>
      <%end%>
    <%end%>
  </div>
  <%if $used==true%>
    <script>window.alert("You have already chosen this letter. Try another one!")</script>
    <%end%>
  <form action="/play" method="post">
    <div class="form-group" id="form_letter">
      <input class="form-control" type="text" pattern="[A-Za-z]{1}" name="letter" id="text"  required>
      <button type="submit" class="btn" id="type">Type a letter!</button>
     
    </div>
  </form>
  <script>
    window.onload = function(){
    document.getElementById("text").focus();
    }
  </script>
  <div class="lives">
    <button class="btn">Turns left: <%=$lives%></button>
  </div>
  <div class="lives">
    <button name="score" class="btn">Score: <%=$score%></button>
  </div>
  
  <div class="alphabet">
    <%for i in (0...$letters.length)%>
    <%if $letters[i]!=""%>
      <button type="button" class="btn">
        <%=$letters[i]%>
      </button>
      <%end%>
    <%end%>
  </div>
</div>
